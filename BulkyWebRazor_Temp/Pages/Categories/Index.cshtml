@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel



<div class="container">


	<div class="row pt-4 pb-3">

		<div class="col-6">
			<h2 class="text-primary">Categroy List</h2>

		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-page="/categories/create">
				<i class="bi bi-plus-circle"></i>	Create New Category
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">

		<thead>


			<tr>
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
				<th></th>
			</tr>
		</thead>



		<tbody>

			@foreach (var item in Model.CategoryList)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.DisplayOrder</td>
					<td>
						<div class="w-75 btn-group" roule="group">
							<a class="btn btn-primary mx-2" asp-page="/categories/edit"  asp-route-Id="@item.Id">
								<i class="bi bi-pencil-square"></i> Edit
							</a>

							<a class="btn btn-danger mx-2" asp-page="/categories/delete" asp-route-Id="@item.Id">
								<i class="bi bi-trash-fill"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}

		</tbody>


	</table>


</div>