@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Model.Category.Name
        </dt>
        <dd class="col-sm-10">
            @Model.Category.DisplayOrder
        </dd>
    </dl>

    <form  method="post">
        <input asp-for="Category.Id" hidden />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="/categories/index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
